<% @page_title = "マイアカウント" %>
<h2><%= @page_title %></h2>

<p><%= link_to "アカウント情報の編集", :edit_member %></p>

<table class="attr">
  <tr>
    <th>ID</th>
    <td><%= @member.login_id %></td>
  </tr>
  <tr>
    <th>名前</th>
    <td><%= @member.name %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @member.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @member.phone %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @member.email %></td>
  </tr>
  <% c = 0 %>
  <% @reservation.each do |reservation| %>
  <tr>
  <th>ツアー名</th>
  <td><%= link_to simple_format(@tour[c].tourname), [@member, reservation] %></td>
  <% if reservation.canceld %>
  <td>キャンセル申請中<br><%= link_to "取り消す", [:edit, @current_member, reservation] %></td>
  <% end %>
  </tr>
  <% c = c + 1 %>
  <% end %>
</table>