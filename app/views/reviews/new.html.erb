<% @page_titole = "レビューの投稿" %>
<h2><%= @page_title %></h2>

<%= render "shared/errors", obj: @review %>

<div class="body">
  <%= form_for [@tour, @review] do |form| %>
  <div class="title">
    <p><%= form.label :title %> <%= form.text_field :title, size: 40 %></p>
  </div>
  <div class="content">
    <p><%= form.label :content %></p>
    <%= form.text_area :content, cols: 40, rows: 4 %>
  </div>
  <div class="input">
    <p><%= form.submit %></p>
  </div>
  <% end %>
</div>