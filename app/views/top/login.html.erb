<% @page_title = "ログイン" %>
<h2><%= @page_title %></h2>
<% if flash.alert %>
<p class="alert"><%= flash.alert %></p>
<% end %>
<%= form_tag :session do %>
<table id="login_form">
<tr>
<td align="right">ログインID：</td>
<td><%= text_field_tag "login_id", "", style: "width: 120px" %></td>
</tr>
<tr>
<td align="right">パスワード：</td>
<td><%= password_field_tag "password", "", style: "width: 120px" %></td>
</tr>
<tr>
<td colspan="2" align="center">
<%= submit_tag "ログイン" %></td>
</tr>
</table>
<%= hidden_field_tag "from", request.path %>
<% end %>
<P><%= link_to "会員の新規登録", new_member_path %></P>